{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "TensorBoard",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/tensorboard",
            "args": [
                "--logdir",
                "${workspaceFolder}/runs",
                "--port",
                "6006",
                "--bind_all"
            ],
            "isBackground": true,
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "silent",
                "panel": "dedicated",
                "close": true
            }
        }
    ]
}
